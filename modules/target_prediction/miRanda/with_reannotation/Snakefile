rule expression_filter_miRanda_chr:
        input:
            miRanda_scores="results/targets/miRanda/{species}/{tissue}_chr{chrom}.temp.tsv",
            expression_values="results/salmon/{species}/{tissue}.sf"
        params:
            tpm_expression_threshold= config['TPM_expression_threshold']
        output: temp("results/targets/miRanda/{species}/{tissue}/chr{chrom}.tsv")
        script: 'filter_miRanda_scores.R'

rule expression_filter_miRanda:
        input:
            miRanda_scores="results/targets/miRanda/{species}/{tissue}.temp.tsv",
            expression_values="results/salmon/{species}/{tissue}.sf"
        params:
            tpm_expression_threshold=config['TPM_expression_threshold']
        wildcard_constraints:
               tissue="((?!temp).)*"
        output: protected("results/targets/{species}/{tissue}/target_predictions.txt")
        script: 'filter_miRanda_scores.R'
