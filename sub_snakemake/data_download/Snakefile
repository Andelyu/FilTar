#!/bin/bash

rule download_dna_data_human: # fix this
        input:
        output:
           "data/Homo_sapiens.GRCh38.dna.chromosome.{chrom}.fa"
        shell:
           "wget --directory-prefix=data/ ftp://ftp.ensembl.org/pub/release-92/fasta/homo_sapiens/dna/Homo_sapiens.GRCh38.dna.chromosome.{wildcards.chrom}.fa.gz"

rule download_dna_data_mouse: # fix this
        input:
        output:
           "data/Mus_musculus.GRCm38.dna.chromosome.{chrom}.fa"
        shell:
           "wget --directory-prefix=data/ ftp://ftp.ensembl.org/pub/release-92/fasta/mus_musculus/dna/Mus_musculus.GRCm38.dna.chromosome.{wildcards.chrom}.fa.gz"

rule download_maf_files:
        input:
        output:
           "data/chr{chrom}.maf"
        shell:
           "wget --directory-prefix=data/ http://hgdownload.soe.ucsc.edu/goldenPath/hg38/multiz100way/maf/chr{wildcards.chrom}.maf.gz && gunzip {output}"


