#!/bin/bash

def get_latin_name(wildcards):
	if wildcards.species_prefix == 'Homo_sapiens.GRCh38':
		return('homo_sapiens')
	elif wildcards.species_prefix == 'Mus_musculus.GRCm38':
		return('mus_musculus')

rule download_dna_data:
        input:
        output:
           "data/{species_prefix}.dna.chromosome.{chrom}.fa"
	params: get_latin_name
        shell:
           "wget --directory-prefix=data/ ftp://ftp.ensembl.org/pub/release-92/fasta/{params}/dna/{wildcards.species}.dna.chromosome.{wildcards.chrom}.fa.gz"

rule download_maf_files_human:
        input:
        output:
           "data/maf_hsa/chr{chrom}.maf"
        shell:
           "wget --directory-prefix=data/maf_hsa/ -nv http://hgdownload.soe.ucsc.edu/goldenPath/hg38/multiz100way/maf/chr{wildcards.chrom}.maf.gz && gunzip {output}.gz"

rule download_maf_files_mouse:
        input:
        output:
           "data/maf_mmu/chr{chrom}.maf"
        shell:
           "wget --directory-prefix=data/maf_mmu/ -nv http://hgdownload.cse.ucsc.edu/goldenPath/mm10/multiz60way/maf/chr{wildcards.chrom}.maf.gz && gunzip {output}.gz"
